<?php
/** @var Paynow\PaymentGateway\Block\Onepage\Success $block */
/** @var Magento\Sales\Model\Order $order */
$order = $block->getData('order_id');
$block->escapeHtml(__('Payment for your order has been rejected. Use the button below to retry payment'));
?>
<?php
if ($order !== null) :
    if ($block->canRetryPayment()) : ?>
        <a href="<?= $block->escapeUrl($block->getRetryPaymentUrl()); ?>">
            <span><?= $block->escapeHtml(__('Retry payment')); ?></span>
        </a>
    <?php
    endif;
endif;
